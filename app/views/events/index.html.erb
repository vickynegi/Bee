<center><h4>Events</h4></center>
<table class="footable table table-stripped" data-page-size="8">
	<thead>
		<tr>
			<th>Name</th>
			<th>Ticket Fees</th>
			<th>Created</th>
			<th>On Going</th>
		</tr>
	</thead>
    <tbody>
		<% @events.each do |event| %>
			<tr>
				<td><%= link_to "#{ event.name}", event_path(event.id)%></td>
				<td><%= event.fees  %></td>
				<td><%= event.created_at.to_date %></td>
				<td><%= event.on_going ? "Yes" : "No"  %></td>
			</tr>
		<% end %>
    </tbody>
</table>